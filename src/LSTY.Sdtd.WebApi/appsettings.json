{
  "AccessToken": null,
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=./data/database.db"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss.fff} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "./logs/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 365,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "Cors": [],
  "EnableSwagger": true,
  "Urls": "http://localhost:5000",
  "SignalRUrl": "http://localhost:8888",
  "UseResponseCompression": true,
  "FunctionConfigs": {
    "BasicConfig": {
      "ServerName": "[FF0000]Server[FFFFFF]",
      "ChatCommandPrefix": "/",
      "HandleChatMessageErrorTips": "[FF0000]An error occurred, please contact the server administrator"
    },
    "GameNoticeConfig": {
      "IsEnabled": true,
      "WelcomeNotice": "[00FF00]Welcome to 7 Days to Die!",
      "AlternateInterval": "300",
      "AlternateNotices": [ "[00FF00]Hello, this is a alternate notice1", "[00FF00]Hello, this is a alternate notice2" ]
    }
  }
}
